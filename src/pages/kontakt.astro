---
import Layout from '../layouts/Layout.astro';
import { getContent } from '../utils/contentLoader';
import { Image, Picture } from 'astro:assets';
import myBackground from '../assets/photos/kancelarija-2.jpg';
import Text from '@components/common/Text.astro';

export const prerender = true;
const contactContent = await getContent('contact');
if (!contactContent) {
  return Astro.redirect('/404');
}
const { frontmatter, content } = contactContent;
---

<Layout title='Contact Us'>
  <div class='relative min-h-screen'>
    <Picture
      src={myBackground}
      alt='Office background'
      class='absolute inset-0 object-cover w-full min-h-full'
      loading='eager'
      formats={['webp', 'avif', 'jpeg']}
      quality={80}
    />
    <div
      class='min-h-screen inset-0 bg-black bg-opacity-70 flex justify-center items-center p-4 backdrop-blur-sm'
    >
      <div class='p-4 sm:p-6 md:p-8 rounded-lg shadow-lg w-full max-w-4xl'>
        <div class='flex flex-col lg:flex-row'>
          <!-- Contact Form -->
          <div class='w-full lg:w-2/3 lg:pr-8 mb-8 lg:mb-0'>
            <Text
              level='h1'
              color='light'
              class='mb-5'
            >
              Kontakt
            </Text>
            <form class='space-y-4'>
              <div
                class='flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4'
              >
                <input
                  type='text'
                  placeholder='Name *'
                  class='w-full sm:w-1/2 p-2 border bg-transparent border-gray-300 rounded placeholder:text-text-dark text-text-dark'
                  required
                />
                <input
                  type='email'
                  placeholder='Email *'
                  class='w-full sm:w-1/2 p-2 border bg-transparent border-gray-300 rounded placeholder:text-text-dark text-text-dark'
                  required
                />
              </div>
              <input
                type='text'
                placeholder='Subject'
                class='w-full sm:w-1/2 p-2 border bg-transparent border-gray-300 rounded placeholder:text-text-dark text-text-dark'
              />
              <textarea
                placeholder='Message'
                class='w-full sm:w-1/2 p-2 border bg-transparent border-gray-300 rounded placeholder:text-text-dark text-text-dark'
              ></textarea>
              <button
                type='submit'
                class='bg-background-dark text-white font-bold py-3 px-6 rounded w-full hover:bg-primary transition duration-300'
              >
                Send
              </button>
            </form>
          </div>

          <!-- Contact Info -->
          <div class='w-full lg:w-1/3 text-black'>
            <h2 class='font-bold text-xl mb-4'>Email Us</h2>
            <p class='mb-6'>info@yourwebsite.com</p>

            <h2 class='font-bold text-xl mb-4'>Connect With Us</h2>
            <div class='flex space-x-2 mb-6'>
              <a
                href='#'
                class='text-black hover:text-gray-700'
              >
                <svg
                  class='w-6 h-6'
                  fill='currentColor'
                  viewBox='0 0 24 24'
                  ><path
                    d='M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z'
                  ></path></svg
                >
              </a>
              <a
                href='#'
                class='text-black hover:text-gray-700'
              >
                <svg
                  class='w-6 h-6'
                  fill='currentColor'
                  viewBox='0 0 24 24'
                  ><path
                    d='M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.061a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.937 4.937 0 004.604 3.417 9.868 9.868 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.054 0 13.999-7.496 13.999-13.986 0-.209 0-.42-.015-.63a9.936 9.936 0 002.46-2.548l-.047-.02z'
                  ></path></svg
                >
              </a>
            </div>

            <p class='text-sm'>
              The Love Local Collective in a nutshell:
              <br /><br />
              Eat | Drink | Shop | Love Like a Local
              <br /><br />
              Your comprehensive & always honest online tour guide to all the best
              things homemade, handmade and local to you.
            </p>

            <p class='font-bold mt-4'>Let's be independent, together!</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
