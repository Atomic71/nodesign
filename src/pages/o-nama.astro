---
import SecondaryPage from '@components/common/SecondaryPage.astro';
import Section from '@components/common/Section.astro';
import Text from '@components/common/Text.astro';
import { getCollection } from 'astro:content';

const aboutContent = await getCollection('about');
if (!aboutContent) {
  return Astro.redirect('/404');
}

const aboutData = aboutContent[0];
---

<SecondaryPage
  title={aboutData.data.title}
  description={aboutData.data.description}
  breadcrumbs={[
    { label: 'Početna', href: '/' },
    { label: 'O nama', href: '/o-nama' },
  ]}
>
  <Text
    level='h2'
    themed
    >{aboutData.data.mission.title}</Text
  >
  <Text
    level='body'
    themed
    >{aboutData.data.mission.description}</Text
  >
  <Text level='h2'> {aboutData.data.team.title}</Text>

  <Text
    themed
    level='body'
    >{aboutData.data.team.description}</Text
  >
</SecondaryPage>
