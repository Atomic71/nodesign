---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/home/Hero.astro';
import ServiceSection from '@components/home/ServiceSection.astro';
import FeaturedProjectsSection from '@components/home/FeaturedProjectsSection.astro';
import AboutSection from '@components/home/AboutSection.astro';
import TestimonialsSection from '@components/home/TestimonialsSection.astro';
import CtaSection from '@components/home/CtaSection.astro';
import { getCategories } from '@utils/images';
import { getContent } from '@utils/contentLoader';
import CategorySection from '@components/common/CategorySection.astro';

export const prerender = true;

// Fetch all necessary data at build time
const categories = await getCategories();
const homeContent = await getContent('home');

if (!homeContent) {
  return Astro.redirect('/404');
}

const { frontmatter } = homeContent;

const featuredProjects = categories
  .map((category) => ({
    category: category.name,
    categorySlug: category.slug,
    project: category.projects[0],
  }))
  .filter((item) => item.project);

const carouselSlides = frontmatter.carouselSlides || [];
---

<Layout>
  <Hero slides={carouselSlides} />

  <!-- <ServiceSection
    title={frontmatter.services.title}
    description={frontmatter.services.description}
    categories={categories}
  /> -->
  {
    categories.map((category, index) => (
      <CategorySection
        title={category.name}
        description={category.description || ''}
        image={category.projects[0]?.coverImage || '/api/placeholder/600/400'}
        link={`/galerija/${category.slug}`}
        reverse={index % 2 !== 0}
      />
    ))
  }

  <FeaturedProjectsSection
    title={frontmatter.featuredProjects.title}
    description={frontmatter.featuredProjects.description}
    featuredProjects={featuredProjects}
  />

  <AboutSection
    title={frontmatter.about.title}
    description={frontmatter.about.description}
    cta={frontmatter.about.cta}
  />

  <TestimonialsSection
    title={frontmatter.testimonials.title}
    testimonials={frontmatter.testimonials.items}
  />

  <CtaSection
    title={frontmatter.cta.title}
    description={frontmatter.cta.description}
    buttonText={frontmatter.cta.buttonText}
    link={frontmatter.cta.link}
  />
</Layout>
