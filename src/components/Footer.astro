---
import Text from './Text.astro';
import FooterList from './FooterList.astro';

const currentYear = new Date().getFullYear();

const quickLinks = [
  { text: 'Kancelarijski prostori', link: '/galerija/kancelarijski-prostor' },
  { text: 'Namještaj po mjeri', link: '/galerija/namjestaj-po-mjeri' },
  { text: 'Uređenje doma', link: '/galerija/uredjenje-doma' },
  { text: 'O nama', link: '/o-nama' },
  { text: 'Kontakt', link: '/kontakt' },
];

const contactInfo = [
  { text: 'Email: info@nodesign.ba' },
  { text: 'Telefon: +387 XX XXX XXX' },
  { text: 'Adresa: Ulica i broj, Grad' },
];
---

<footer class='bg-neutral-900 text-white'>
  <div class='container mx-auto px-4 py-12'>
    <div class='grid grid-cols-1 md:grid-cols-3 gap-8'>
      <div>
        <Text
          level='h3'
          color='light'
          class='mb-4'
          >NoDesign</Text
        >
        <Text
          level='small'
          color='light'
        >
          Spajamo tradicionalno zanatstvo sa modernim dizajnom kako bismo
          stvorili jedinstvene prostore i namještaj koji odražavaju vašu
          osobnost.
        </Text>
      </div>
      <FooterList
        title='Brzi linkovi'
        items={quickLinks}
      />
      <FooterList
        title='Kontakt informacije'
        items={contactInfo}
      />
    </div>
    <div class='border-t border-neutral-700 mt-8 pt-8 text-center'>
      <Text
        level='small'
        color='light'
      >
        &copy; {currentYear} NoDesign. Sva prava zadržana.
      </Text>
    </div>
  </div>
</footer>
