---
import Section from '@components/common/HomeSection.astro';

interface Props {
  title: string;
  description: string;
  buttonText: string;
  link: string;
}

const { title, buttonText, link } = Astro.props;
---

<Section
  title={title}
  backgroundColor='bg-primary dark:bg-primary-dark'
  titleColor='light'
  centerText
>
  <div class='flex justify-center'>
    <a
      href={link}
      class='btn font-bold py-2 px-4 rounded'
    >
      {buttonText}
    </a>
  </div>
</Section>

<style>
  .btn {
    @apply bg-accent-light hover:bg-accent-dark text-text-light  hover:text-text-dark;
  }
</style>
