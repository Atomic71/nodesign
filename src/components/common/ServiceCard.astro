---
import Text from '@components/common/Text.astro';
import Icon from '@components/common/Icon.astro';
import type { IconType } from '@utils/schemas/icons';

interface Props {
  title: string;
  description: string;
  icon: IconType;
  slug: string;
}

const { title, description, icon, slug } = Astro.props;
---

<a
  href={`/usluge/${slug}`}
  class='block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow'
>
  <Icon
    name={icon}
    class='w-12 h-12 mb-4 text-primary'
  />
  <Text
    level='h3'
    color='primary'
    class='mb-2'
    >{title}</Text
  >
  <Text
    level='body'
    color='dark'
    >{description}</Text
  >
</a>
