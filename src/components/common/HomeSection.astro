---
import Text from '@components/common/Text.astro';

interface Props {
  title?: string;
  titleLevel?: 'h1' | 'h2' | 'h3';
  titleColor?: 'primary' | 'secondary' | 'accent' | 'light' | 'dark';
  backgroundColor?: string;
  class?: string;
  centerText?: boolean;
}

const {
  title,
  titleLevel = 'h2',
  titleColor = 'primary',
  backgroundColor = 'bg-background-light dark:bg-background-dark',
  class: className,
  centerText = false,
} = Astro.props;
---

<section class:list={[backgroundColor, 'py-16', className]}>
  <div class='container'>
    {
      title && (
        <Text
          level={titleLevel}
          themed
          class:list={[
            'mb-8',
            {
              'text-center': centerText,
            },
          ]}
          label={title}
        />
      )
    }
    <slot />
  </div>
</section>
