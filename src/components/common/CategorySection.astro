---
import Section from '@components/common/Section.astro';
import Text from '@components/common/Text.astro';
import Thumbnail from '@components/common/Thumbnail.astro';

interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
  reverse?: boolean;
}

const { title, description, image, link, reverse = false } = Astro.props;
---

<Section>
  <div
    class={`flex flex-col ${reverse ? 'md:flex-row-reverse' : 'md:flex-row'} items-start gap-8`}
  >
    <div class='w-full md:w-1/2'>
      <Thumbnail
        image={image}
        title={title}
        description=''
        link={link}
      />
    </div>
    <div class='w-full md:w-1/2'>
      <Text
        level='h2'
        color='primary'
        class='mb-4'
        >{title}</Text
      >
      <Text
        level='body'
        color='dark'
        class='mb-6'
        >{description}</Text
      >
      <a
        href={link}
        class='inline-block bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded transition duration-300'
      >
        Saznajte vi≈°e
      </a>
    </div>
  </div>
</Section>
