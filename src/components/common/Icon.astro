---
import { Image } from 'astro:assets';

export interface Props {
  name:
    | 'nodesign-brand-light'
    | 'nodesign-brand-dark'
    | 'social-facebook-white'
    | 'social-facebook-black'
    | 'social-instagram-white'
    | 'social-instagram-black';
  class?: string;
  width?: number;
  height?: number;
  id?: string;
}

const { name, class: className, width = 24, height = 24, id } = Astro.props;

const icons = {
  'nodesign-brand-light': '/icons/nodesign-brand-white.svg',
  'nodesign-brand-dark': '/icons/nodesign-brand-black.svg',
  'social-instagram-white': '/icons/social-instagram-white.svg',
  'social-facebook-white': '/icons/social-facebook-white.svg',
  'social-instagram-black': '/icons/social-instagram-black.svg',
  'social-facebook-black': '/icons/social-facebook-black.svg',
};
---

<Image
  id={id ?? name}
  src={icons[name]}
  alt={name.replace(/-/g, ' ')}
  class={className}
  width={width}
  height={height}
/>
