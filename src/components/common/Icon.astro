---
import Svg from '@cxa/astro-inline-svg';

import NodeDesignBrand from '@assets/icons/nodesign-brand.svg?raw';
import SocialFacebook from '@assets/icons/social-facebook.svg?raw';
import SocialInstagram from '@assets/icons/social-instagram.svg?raw';
import Home from '@assets/icons/home.svg?raw';
import Email from '@assets/icons/email.svg?raw';
import Phone from '@assets/icons/phone.svg?raw';
import ChevronRight from '@assets/icons/chevron-right.svg?raw';
import type { IconType } from '@utils/schemas/icons';

export interface Props {
  name: IconType;
  class?: string;
  width?: number | 'auto';
  height?: number;
  id?: string;
}

const {
  name,
  class: className,
  width = 24,
  height = 'auto',
  id,
  ...attributes
} = Astro.props;

const icons: Record<IconType, string> = {
  'nodesign-brand': NodeDesignBrand,
  'social-instagram': SocialInstagram,
  'social-facebook': SocialFacebook,
  home: Home,
  'chevron-right': ChevronRight,
  email: Email,
  phone: Phone,
};
---

<Svg
  class={className}
  raw={icons[name]}
  width={width}
  height={height}
  id={id}
  {...attributes}
/>
