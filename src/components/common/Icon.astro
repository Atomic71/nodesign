---
import { Image } from 'astro:assets';

type ThemedIcons = 'nodesign-brand' | 'social-facebook' | 'social-instagram';
type ThemedIcon = `${ThemedIcons}-${'light' | 'dark'}`;

type IconName = ThemedIcon;
type IconPath = `/icons/${IconName}.svg`;
export interface Props {
  name: IconName;
  class?: string;
  width?: number;
  height?: number;
  id?: string;
}

const { name, class: className, width = 24, height = 24, id } = Astro.props;

const icons: Record<IconName, IconPath> = {
  'nodesign-brand-light': '/icons/nodesign-brand-light.svg',
  'nodesign-brand-dark': '/icons/nodesign-brand-dark.svg',
  'social-instagram-light': '/icons/social-instagram-light.svg',
  'social-facebook-light': '/icons/social-facebook-light.svg',
  'social-instagram-dark': '/icons/social-instagram-dark.svg',
  'social-facebook-dark': '/icons/social-facebook-dark.svg',
};
---

<Image
  id={id ?? name}
  src={icons[name]}
  alt={name.replace(/-/g, ' ')}
  class={className}
  width={width}
  height={height}
/>
