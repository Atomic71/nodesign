---
import Icon from '@components/common/Icon.astro';
import Text from '@components/common/Text.astro';

interface Props {
  icon: string;
  title: string;
}

const { icon, title } = Astro.props;
---

<div class='flex items-center p-4 bg-gray-100 rounded-lg'>
  <Icon
    name={'home'}
    class='w-8 h-8 mr-4 text-primary'
  />
  <Text
    level='h3'
    class='text-lg'
    >{title}</Text
  >
</div>
